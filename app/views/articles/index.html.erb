<div class="ribbon">
  <h3>作品一覧</h3>
</div>

<table>
  <tr>
    <table border="3">
    <th>作品名</th>
    <th>紹介文</th>
    <th>Like</th>
    <th>投稿時間</th>
    <th colspan="3">アクションボタン</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
       <td><%= article.title %></td>
       <td><%= article.text %></td>
       <td><%= article.star %></td>
       <td><%= article.created_at %></td>
       <td><%= link_to '閲覧', article_path(article) %></td>
       <td><%= link_to '編集', edit_article_path(article) %></td>
       <td><%= link_to '削除', article_path(article),
                    method: :delete, data: { confirm: '記事を削除してもよろしいですか？' } %></td>

    </tr>
  <% end %>
</table>

<br>
<%= link_to '作品追加', new_article_path %>
<br>

<div class="ribbon">
  <h3>新しく追加された作品</h3>
</div>

<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>投稿時間</th>
  </tr>
<tr>
  <td><%= @latest.title %></td>
  <td><%= @latest.text %></td>
  <td><%= @latest.created_at %></td>
</tr>
